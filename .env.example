# Unified InfluxDB Configuration
# This file is shared by hooks, plugins, and post-processing
# Location: project_root/.env

INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=mcp-evaluation-token
INFLUXDB_ORG=mcp-evaluation
INFLUXDB_BUCKET=evaluation-sessions

# Hook Configuration
HOOK_ENABLED=true
HOOK_LOG_LEVEL=INFO

# Plugin Configuration  
PLUGIN_ENABLED=true
PLUGIN_LOG_LEVEL=INFO

# Post-processing Configuration
POST_PROCESSING_OUTPUT_DIR=reports
POST_PROCESSING_PROMPTS_DIR=prompts
POST_PROCESSING_TIME_WINDOW_HOURS=24
POST_PROCESSING_SESSION_LOOKUP_DAYS=30
POST_PROCESSING_MIN_EXECUTION_TIME_SECONDS=0.1
POST_PROCESSING_SOURCE_APP=mcp_evaluation
POST_PROCESSING_CLAUDE_MEASUREMENT=claude_code_events
POST_PROCESSING_OPENCODE_MEASUREMENT=opencode_events

# Agent Event Type Configuration
POST_PROCESSING_OPENCODE_TOOL_START=tool.execute.before
POST_PROCESSING_OPENCODE_TOOL_END=tool.execute.after
POST_PROCESSING_CLAUDE_TOOL_START=PreToolUse
POST_PROCESSING_CLAUDE_TOOL_END=PostToolUse

# Error Message Templates
POST_PROCESSING_ERROR_NO_TOOLS=No tool calls executed - session completed without using any tools
POST_PROCESSING_ERROR_INCOMPLETE_TOOLS=Tool calls initiated but no tools completed successfully
POST_PROCESSING_ERROR_GENERAL_FAILURE=Session failed despite tool execution

# General Configuration
DEBUG_LOGGING=true
